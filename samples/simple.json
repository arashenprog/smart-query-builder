{
    "$query": {
        "$from": {
            "$select": [
                "[name]",
                "[fname]"
            ],
            "[users]": {
                "$filter": {
                    "$or": [
                        {
                            "$eq": {
                                "$f": "[name]",
                                "$v": "Arash"
                            }
                        },
                        {
                            "$in": {
                                "$f": "[name]",
                                "$v": [
                                    "Ali",
                                    "Reza"
                                ]
                            }
                        },
                        {
                            "$not": [
                                {
                                    "$and": [
                                        {
                                            "$between": {
                                                "$f": "[age]",
                                                "$v": [
                                                    10,
                                                    20
                                                ]
                                            }
                                        },
                                        {
                                            "$not": [
                                                {
                                                    "$between": {
                                                        "$f": "[weight]",
                                                        "$v": [
                                                            50,
                                                            60
                                                        ]
                                                    }
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        "$skip": 0,
        "$take": 10
    }
}