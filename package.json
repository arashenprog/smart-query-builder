{
  "watch": {
    "run-js": {
      "patterns": ["dist"],
      "extensions": "js,jsx",
      "quiet": true,
      "legacyWatch": true,
      "delay": 1500,
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "start": "concurrently \"npm:build\" \"npm:watch\"",
    "build": "tsc --project tsconfig.json  --watch",
    "watch": "npm-watch run-js",
    "run-js" : "node dist/index.js",
    "test": "mocha -r ts-node/register 'tests/**/*.test.ts' --watch --watch-files src/**/*,test/**/* "
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4",
    "concurrently": "^7.2.1",
    "npm-watch": "^0.11.0"
  }
}
